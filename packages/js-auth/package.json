{
  "name": "@commercelayer/js-auth",
  "version": "5.0.0",
  "description": "Commerce Layer Javascript Auth",
  "repository": {
    "url": "https://github.com/commercelayer/commercelayer-js-auth.git"
  },
  "author": {
    "name": "Alessandro Casazza",
