      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "jamstack",
    "headless",
    "ecommerce",
    "api",
    "auth"
  ],
  "bugs": {
    "url": "https://github.com/commercelayer/commercelayer-js-auth/issues"
